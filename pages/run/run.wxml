<!--pages/run/run.wxml-->
<view class="container">
    <view class='header'>
        <view class='left public'>
            <view class='leftBg bg'>
                  <image src="{{houseImg}}" mode='widthFix'></image>
            </view>
            <view class='text'>{{houseName}}</view>
        </view>
        <view class='time'>{{second}}</view>
        <view class='right public'>
            <view class='rightBg bg'>
                  <image src="{{otherImg}}" mode='widthFix'></image>
            </view>
            <view class='text'>{{otherName}}</view>
        </view>
    </view>
    <view class='line'>
        <view class='left'></view>
        <view class='right'></view>
    </view>
    <view class='num'>第{{index}}题</view>
    <view class='idiom'>
        <view>四字成语</view>
    </view>
    <view class='caiImg' style='background: url({{question_list.thumb}});'></view>
    <view class='answer'>
        <view class='item'  bindtap='pushAnswer' wx:for="{{answer}}" wx:key="{{index}}">{{item}}</view>
    </view>
    <view class='option'>
        <view class='item' bindtap='' wx:for="{{option}}" wx:key="{{index}}" data-index='{{index}}'>
            {{item}}
        </view>
    </view>
</view>


