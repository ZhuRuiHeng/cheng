<!--pages/run/run.wxml-->
<view class="container">
    <view class='header'>
        <view class='left public'>
            <view class='leftBg bg'>
                  <image src="{{userInfo.avatarUrl}}" mode='widthFix'></image>
            </view>
            <view class='text'>{{userInfo.nickName}}</view>
        </view>
        <view class='time'>{{second}}</view>
        <view class='right public'>
            <view class='rightBg bg'>
                  <image src="{{userInfo.avatarUrl}}" mode='widthFix'></image>
            </view>
            <view class='text'>{{userInfo.nickName}}</view>
        </view>
    </view>
    <view class='line'>
        <view class='left'></view>
        <view class='right'></view>
    </view>
    <view class='idiom'>
        <view>四字成语</view>
    </view>
    <view class='caiImg'>
        <image src="http://iph.href.lu/480x346" mode='widthFix'></image>
    </view>
    <view class='answer'>
        <view class='item' wx:for="{{answer}}" wx:key="{{index}}">{{item}}</view>
    </view>
    <view class='option'>
        <view class='item' wx:for="{{option}}" wx:key="{{index}}" data-index='{{index}}'>{{item}}</view>
    </view>
</view>

