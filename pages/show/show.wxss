/* pages/show/show.wxss */
page{
  background: #c5e4ff url(http://ovhvevt35.bkt.clouddn.com/chengyu/pk.png) no-repeat;
  background-size: contain;
}
.chengji{
  text-align: center;
  margin: 40rpx auto;
  position: relative;
}
.chengji .avatarUrl{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    position: absolute;
    z-index: 6;
    top: 50%; 
    left: 50%;  
    -webkit-transform: translate(-50%,-50%);  
    -ms-transform: translate(-50%,-50%);  
    transform: translate(-50%,-50%); 
}
.button{
    display: flex;
    justify-content: space-around; 
    margin: 100rpx 0; 
}
.button .submit{
  border: 2rpx solid #ffffff;
  padding: 12rpx 20rpx!important;
  border-radius:16rpx!important;
}
.button button{
  background: none!important;
  color: #ffffff!important;
  font-size: 28rpx!important;
  
}
.button button image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.mid{
  text-align: center;
  color: #4f8fe7;
  font-size: 32rpx;
  background: url(http://p1jrmxejh.bkt.clouddn.com/chengyu/textBg.png) no-repeat center;
  background-size: contain;
}
.up{
  text-align: center;
}
.up form{
  display: inline-block;
  width: 300rpx;
  height: 100rpx;
}
.up button{
  background: #ef8733!important;
  color: #ffffff;
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 20rpx!important;
}
.title{
  text-align: center;
  font-size: 30rpx;
  color: #ffffff;
}