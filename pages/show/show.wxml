<!--pages/show/show.wxml-->
<view class='container'>
    <view class='chengji'>
        <image src="http://ovhvevt35.bkt.clouddn.com/chengyu/type.png" mode='widthFix'></image>
        <image class='avatarUrl' src="{{userInfo.avatarUrl}}" mode='widthFix'></image>
    </view>
    <view class='mid'>
        <view>成语跳战,我是{{segment}}</view>
        <view>不服来战</view>
    </view>
    <view class='button'>
        <form report-submit="true" bindsubmit="formSubmit" class="formSubmit" >
            <button formType="submit" class="submit" style='border-radius:0'>
                <button open-type='share'  data-type="0">
                    <image src="http://ovhvevt35.bkt.clouddn.com/chengyu/share1.png" mode='widthFix'></image> 分享好友
                </button>
            </button>
        </form>
        <form report-submit="true" bindsubmit="formSubmit" class="formSubmit" >
            <button formType="submit" class="submit" style='border-radius:0'>
                <button bindtap='saveImg'><image src="http://ovhvevt35.bkt.clouddn.com/chengyu/down.png" mode='widthFix'></image>保存到想册</button>
            </button>
        </form>
    </view>
    <view class='up'>
        <form report-submit="true" bindsubmit="formSubmit" class="formSubmit" >
            <button formType="submit" class="submit" style='border-radius:0'>
                <button open-type='share' data-type="1">发起挑战</button>
            </button>
        </form>
    </view>
    <view class='title'>成语挑战，共五题，每题20秒时间</view>
</view>
