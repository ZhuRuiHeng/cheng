page{
   background: #c5e4ff url(http://ovhvevt35.bkt.clouddn.com/chengyu/bg.png) no-repeat center;
   background-size: contain;
   color: #fff;
}
.header{
  display: flex;
  justify-content: space-between;
  height: 200rpx;
}
.left{
   position: absolute;
   animation: myleft 1s;
}
.right{
  position: absolute;
  animation: myright 1s;
  right: 0;
}
.win{
  width: 100%;
}
.win view{
  width: 220rpx;
  position: absolute;
  z-index: 3;
  top: 20rpx; 
  left: 50%;  
  -webkit-transform: translateX(-50%);  
  -ms-transform: translateX(-50%);  
  transform: translateX(-50%);  
  animation: winMove 1s;
}
@keyframes winMove
{
from {top:-20rpx;}
to {top:20rpx;}
}
@keyframes myleft
{
from {top:0px;left:-60px;}
to {top:0px;left:0px;}
}
@keyframes myright
{
from {top:0px;right:-60px;}
to {top:0px;right:0px;}
}
.public{
  font-size: 32rpx;
  transition: transform 0.35s;
  margin-top: 10rpx;
}
.public .bg{
    width: 240rpx;
    position: relative;
    height: 140rpx;
}
.public image{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    position: relative;   
}
.left .text{
    text-align: right;
    padding-right: 50rpx;
}
.leftInform{
  width:340rpx;
  position:absolute;
  left: 0;
  top: 150rpx;
  height:140rpx;
  background: #4f8fe7;
  text-align: right;
  padding-right: 60rpx;
  box-sizing: border-box;
  border-top-right-radius: 70rpx;
  border-bottom-right-radius: 70rpx;
  animation: informleft 1s;
}
.rightInform{
  width:340rpx;
  position:absolute;
  right: 0;
  top: 150rpx;
  height:140rpx;
  background: #f06442;
  text-align: left;
  padding-left: 60rpx;
  box-sizing: border-box;
  border-top-left-radius: 70rpx;
  border-bottom-left-radius: 70rpx;
  animation: informright 1s;
}
@keyframes informleft
{
from {top:150rpx;left:-60px;}
to {top:150rpx;left:0px;}
}
@keyframes informright
{
from {top:150rpx;right:-60px;}
to {top:150rpx;right:0px;}
}
