/* pages/mine/mine.wxss */
page{
   background: #c5e4ff url(http://ovhvevt35.bkt.clouddn.com/chengyu/bg.png) no-repeat center;
   background-size: contain;
   color: #fff;
}
.header{
    background: #2f7ee7;
    color: #ffffff;
    text-align: center;
    height: 240rpx;
    width: 96%;
    margin: 0 auto;
    border-radius: 20rpx;
    padding-top: 20rpx;
}
.time{
  font-size: 26rpx;
  padding: 20rpx;
}
.title image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.header .inform{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
  padding: 20rpx;
}
.header .inform .left image{
  position: relative;
  top: -2rpx;
}
.header .inform view{
  display: block;
  font-size: 32rpx;
  position: relative;
  top: 10rpx;
}
.header .inform .left image{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
    margin-right: 6rpx;
}
.header .inform .right{
    background: #2561b8;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
}
.inform .right image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 10rpx;
  border:2px solid #ffffff;
  box-sizing: border-box;
}
.list{
  width: 90%;
  padding: 10rpx 20rpx;
  color: #ffffff;
  margin: 0rpx auto 0;
}
.list .item{
    border-top: 1px solid #f7f7f7;
    display: flex;
    justify-content: space-between;
    padding: 10rpx;
    background: #2f7ee7;
    border-radius: 20rpx;
    margin-bottom: 10rpx;
    position: relative;
}
.list .item .left{
  display: flex;
  justify-content: flex-start;
}
.list .item.first{
  border-top: 6rpx solid #2561b8;
}
.bgColor{
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 144rpx;
    background: rgba(137, 187, 246, .5)
}
.num{
  border:1px solid #655bce;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50%;
  color: #655bce;
  margin: 40rpx 10rpx;
}
.niceImg image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border:4rpx solid #ffffff;
  box-sizing: border-box;
}
.item .inform view{
  margin-left: 10rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  text-align: left;
}
.jifen image{
  width: 30rpx;
  height: 40rpx;
  margin-right: 6rpx;
  position: relative;
  top: 2rpx;
}
.inform .jifen{
  color: #fcc14f;
  border-radius: 30rpx;
  margin-top: 10rpx;
  padding: 4rpx 26rpx 4rpx 10rpx;
}
.item .right{
  color: #fff;
  font-size: 26rpx;
  background: #1c448a;
  border-radius: 30rpx;
  padding: 4rpx 10rpx;
  position: relative;
  top: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  z-index: 9;
}
.right image{
    width: 40rpx;
    height: 50rpx;
    margin-top: 10rpx;
}
.right view{
  margin-top: 10rpx;
}
.title .text{
  width: 300rpx;
}
.title image.text{
  border-radius: 0!important;
}
.left .inform view{
  text-align: center;
  width: 300rpx;
}
.left .inform view.niceImg{
  font-size: 32rpx;
  padding: 10rpx;
}
.jiesuo{
  width: 100%;
  text-align: center;
  vertical-align: middle;
  margin-bottom: 100rpx;
}
.jiesuo image{
  width: 120rpx;
  height: 120rpx;
  vertical-align: middle;
}
.jiesuo .rol{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #ffffff;
  margin: 30rpx auto;
}