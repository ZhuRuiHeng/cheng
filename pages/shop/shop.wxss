/* pages/shop/shop.wxss */
page{
  background: #c5e4ff url(http://ovhvevt35.bkt.clouddn.com/chengyu/pk.png) no-repeat;
   background-size: contain;
}
.header{
  width: 96%;
  height: 230rpx;
  line-height: 180rpx;
  text-align: center;
  background: url(http://ovhvevt35.bkt.clouddn.com/chengyu/9.png) no-repeat;
  background-size: contain;
  color: #ffffff; 
  margin: 0 auto;
  margin-top: -20rpx;
}
.list{
 width: 90%;
  margin: -40rpx auto 0;
}
.item{
  background: #4e8fe7;
  color: #ffffff;
  width: 100%;
  text-align: center;
  height: 150rpx;
  line-height: 150rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.item view{
  display: inline-block;
}
.item .one{
  width: 30%;
}
.item .one image{
    width: 80rpx;
    height: 96rpx;
    vertical-align: middle;
}
.item .two{
  font-size: 50rpx;
  width: 46%;
}
.item .three{
  width: 24%;
  font-size: 46rpx;
  background: #2561b8;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  height: 148rpx;
  position: relative;
  top: -2rpx;
}
.num{
  text-align: center;
  margin: 100rpx 0 0 0;
}
.item .red{
  background: #ab3825;
  color: #ffffff;
  border-radius: 20rpx;
  display: inline-block;
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  font-size: 20rpx;
  height: 26rpx;
  line-height: 26rpx;
  padding: 4rpx 20rpx;
}