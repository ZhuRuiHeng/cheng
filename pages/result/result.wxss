}
.little{
    font-size: 26rpx;
}
.leftBg{
  background: #4f8fe7;
  border-top-right-radius: 70rpx;
  border-bottom-right-radius: 70rpx;
}
.leftBg image.avatarUrl{
  position: absolute;
  top: 10rpx;
  right: 20rpx;
}
.leftBg image.hat{
    position: absolute;
    top: -30rpx;
    right: -16rpx;
