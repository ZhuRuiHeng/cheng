}
.right .text{
    text-align: left;
    padding-left: 50rpx;
}
.rightBg{
  background: #f06442;
  border-top-left-radius: 70rpx;
  border-bottom-left-radius: 70rpx;
}
.rightBg image.avatarUrl{
  position: absolute;
  top: 10rpx;
  left: 20rpx;
}
.rightBg image.hat{
    position: absolute;
    top: -30rpx;
    left: 46rpx;
    z-index: 3;
}
.inform{
    position: absolute;
    padding-top: 8rpx;
}
.star{
  background: #ffffff;
  color: #4f8fe7;
  padding: 10rpx 20rpx;
}
.out{
  background: #f06442;
  color: #ffffff;
  padding: 10rpx 20rpx;
}
.button{
  width: 200rpx;
  text-align: center;
  margin: 0 auto;
}
.foot{
  position: absolute;
  bottom:30rpx; 
  width: 100%;
  margin: 0 auto;
  text-align: center;
}
.button view{
  border-radius: 10rpx;
  margin: 20rpx auto;
  font-size: 28rpx;
}
.foot .color{
  color: #4f8fe7;
  font-size: 28rpx;
  vertical-align: middle;
}
.foot .color image{
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}
.star button{
  background-color:#ffffff;
  color: #4f8fe7;
}
.out button{
  background: #f06442;
  color: #ffffff;
} 
.img{
  text-align: center;
  vertical-align: middle;
}
.integral{
  padding: 20rpx; 
}
.integral image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}
.integral .line{
    width: 100%;
    position: relative;
    top: -20rpx;
}
.gift{
  width: 100%;
  vertical-align: middle;
  margin-top: 200rpx;
  text-align: center;
}
.gift image{
  width: 240rpx;
  height: 400rpx;
  vertical-align: middle;
  text-align: center;
}
.win{
  width: 100%;
}
.win image{
  width: 220rpx;
  position: absolute;
  z-index: 3;
  top: 20rpx; 
  left: 50%;  
  -webkit-transform: translateX(-50%);  
  -ms-transform: translateX(-50%);  
  transform: translateX(-50%);  
  animation: winMove 1s;
}
@keyframes winMove
{
from {top:-20rpx;}
to {top:20rpx;}
}
.bg{
   width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  overflow: hidden;
  position:fixed; /* static */
  top: 0;
  left: 0;
  z-index: 3;
}
.zindex{
  width: 80%;
  background: #fff;
  margin: 0 auto;
  position: absolute;
  border-radius: 20rpx;
  z-index: 6;
  top: 20rpx; 
  left: 50%;  
  -webkit-transform: translateX(-50%);  
  -ms-transform: translateX(-50%);  
  transform: translateX(-50%);
}
.zindex image{
  width: 220rpx;
  position: absolute;
  z-index: 6;
  top: 20rpx; 
  left: 50%; 
  -webkit-transform: translateX(-50%);  
  -ms-transform: translateX(-50%);  
  transform: translateX(-50%);  
  animation: winMove 1s;
}