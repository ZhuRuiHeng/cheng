/* pages/battle/battle.wxss */
page{
   background: #c5e4ff url(http://ovhvevt35.bkt.clouddn.com/chengyu/pk.png) no-repeat;
   background-size: contain;
}
.wait{
  margin: 30rpx auto;
  text-align: center;
  position: relative;
}
image.waitImg{
    width: 90%;
    height: 650rpx;  
}
.wait image.niceImg{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    position: absolute;
    z-index: 6;
    top: 50%; 
    left: 50%;  
    -webkit-transform: translate(-50%,-50%);  
    -ms-transform: translate(-50%,-50%);  
    transform: translate(-50%,-50%); 
}
.inform{
  text-align: center;
  color: #4f8fe7;
  vertical-align: middle;
}
.inform .name{
  font-size: 36rpx;
  font-weight: 400rpx;
  margin: 20rpx;
}
.inform image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.inform .money{
    font-size: 26rpx;
    vertical-align: middle;
    height: 40rpx;
    line-height: 40rpx;
}
.money .fen{
    position: relative;
    top: 6rpx;
    left: 10rpx;
}
.bg{
   width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  overflow: hidden;
  position:fixed; /* static */
  top: 0;
  left: 0;
  z-index: 9;
}
.zindex{
  width: 80%;
  color: #fff;
  background: #89bbf6;
  margin: 0 auto;
  position: absolute;
  text-align: center;
  border-radius: 20rpx;
  z-index: 9;
  height: 400rpx;
  top: 50%; 
  left: 50%;  
  -webkit-transform: translate(-50%,-50%);  
  -ms-transform: translate(-50%,-50%);  
  transform: translate(-50%,-50%);
}
.zindex .title{
  background: #4f8fe7;
  padding: 20rpx 0;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.zindex .item{
  font-size: 32rpx;
  padding: 10rpx;
  width: 200rpx;
  margin: 60rpx auto;
  border-radius:30rpx;
  border: 1px solid #f06442;
}