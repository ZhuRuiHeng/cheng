.wait{
  margin: 30rpx auto;
  text-align: center;
  position: relative;
}
.waitImg{
    
}
.wait image.niceImg{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    position: absolute;
    z-index: 6;
    top: 50%; 
    left: 50%;  
    -webkit-transform: translate(-50%,-50%);  
    -ms-transform: translate(-50%,-50%);  
    transform: translate(-50%,-50%); 
}
